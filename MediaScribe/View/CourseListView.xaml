                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Name"
                                                Width="*"
                                               Binding="{Binding StringDisplayValue}" 
                                               IsReadOnly="True"/>
                                                    <DataGridTextColumn Header="Length"
                                                Width="55"
                                               Binding="{Binding Length}" 
                                               IsReadOnly="True"/>
                                                </DataGrid.Columns>
                                                <DataGrid.CellStyle>
                                                    <Style TargetType="DataGridCell">
