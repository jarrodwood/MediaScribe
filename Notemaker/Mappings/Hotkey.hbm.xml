<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="JayDev.Notemaker" assembly="Notemaker">

  <class name="Hotkey" table="Hotkeys">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="ID">
      <column name="HotkeyID" sql-type="integer" not-null="true"/>
      <generator class="native" />
    </id>

    <property name="Function" />
    <property name="ModifierKey" />
    <property name="Key" />
    <property name="Colour" type="JayDev.Notemaker.Core.ColorUserType, Notemaker" />
    <property name="SeekDirection" />
    <property name="SeekSeconds" />
    <property name="Rating" />
  </class>

</hibernate-mapping>