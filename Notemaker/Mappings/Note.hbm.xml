<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="JayDev.Notemaker" assembly="Notemaker">

  <class name="Note" table="Notes">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="ID">
      <column name="NoteID" sql-type="integer" not-null="true"/>
      <generator class="native" />
    </id>

    <!-- A cat has to have a name, but it shouldn' be too long. -->
    <property name="Body" />
    <property name="Rating" />
    <property name="ParentCourseID" column="CourseID" />
    <many-to-one name="Start" fetch="join" class="TrackTime" column="StartTrackTimeID" cascade="none" />
    <many-to-one name="End" fetch="join" class="TrackTime" column="EndTrackTimeID" cascade="none" />
  </class>

</hibernate-mapping>