<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="JayDev.MediaScribe" assembly="MediaScribe">

  <class name="Course" table="Courses" lazy="false">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="ID">
      <column name="CourseID" sql-type="integer" not-null="true"/>
      <generator class="native" />
    </id>

    <!-- A cat has to have a name, but it shouldn' be too long. -->
    <property name="Name">
      <column name="Name" not-null="true" />
    </property>
    <property name="EmbeddedVideoHeight" />
    <property name="EmbeddedVideoWidth" />
    <many-to-one name="LastPlayedTrack" fetch="join" class="Track" column="LastPlayedTrackID" cascade="All"  />
    <property name="LastPlayedTrackPosition" />
    <!--<one-to-many name="Notes" class="Note" />-->
    <bag name="Notes" table="Notes" fetch="select" batch-size="50" lazy="false" cascade="none" inverse="true">
      <key column="CourseID"/>
      <one-to-many class="Note"/>
    </bag>
    <bag name="Tracks" table="Tracks" fetch="select" batch-size="50" lazy="false" inverse="true" order-by="OrderNumber" cascade="none">
      <key column="CourseID"/>
      <one-to-many class="Track"/>
    </bag>
    <property name="DateCreated" />
    <property name="DateViewed" />
  </class>

</hibernate-mapping>